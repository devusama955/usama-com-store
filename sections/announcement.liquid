<style>
.announcement {
    width: 100%;
    background-color: #C5DE48;
}

.container {
    max-width: 1920px;
    margin: 0 auto;
    padding: 0;
}

.announcement_inner {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16px;
    position: relative;
}

.announcement .text h2 {
    color: #202020;
    font-family: "Andale Mono", monospace; /* Added fallback font */
    font-size: 12px;
    font-weight: 400; /* Removed redundant 'normal' values */
    text-transform: uppercase;
    line-height: 1.2; /* Specified line-height to improve readability */
}

.announcement .text {
    position: relative;
}

.announcement .text::after {
    position: absolute;
    content: "";
    right: 0;
    top: 0;
    bottom: 0;
    border-right: 1px dashed #202020;
}


</style>
<section class="announcement">
    <div class="container">
        <div class="announcement_inner">
            {% for block in section.blocks %}
            <div class="text">
                {% if block.settings.heading != blank %}
                <h2>{{ block.settings.heading }}</h2>
                {% endif %}
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% schema %}
{
  "name": "Announcement Section",
  "settings": [],
  "blocks": [
    {
      "type": "section",
      "name": "Section Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Bundle and Save"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Section"
    }
  ]
}
{% endschema %}
