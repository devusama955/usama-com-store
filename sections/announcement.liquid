<style>
.announcement {
    width: 100%;
    background-color: #C5DE48;
}

.container {
    max-width: 1920px;
    margin: 0 auto;
    padding: 0;
}

.announcement_inner {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 32px;
    position: relative;
}

.announcement .text h2 {
    color: #202020;
    font-family: "Andale Mono", monospace;
    font-size: 12px;
    font-weight: 400;
    text-transform: uppercase;
    line-height: 1.2;
}

.announcement .text {
    position: relative;
}

.announcement .text h2::after {
    position: absolute;
    content: "";
    right: -16px;
    top: 0;
    bottom: 0;
    border-right: 1px dashed #202020;
}


</style>
<section class="announcement">
    <div class="container">
        <div class="announcement_inner">
            {% for block in section.blocks %}
            <div class="text">
                {% if block.settings.heading != blank %}
                    <h2>
                      <a href="{{ block.settings.heading_url }}" title="{{ block.settings.heading }}">
                        {{ block.settings.heading }}
                      </a>
                    </h2>
                  {% endif %}
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% schema %}
{
  "name": "Announcement Section",
  "settings": [],
  "blocks": [
    {
      "type": "section",
      "name": "Section Block",
      "settings": [
        {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "url",
      "id": "heading_url",
      "label": "Heading URL"
    }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Section"
    }
  ]
}
{% endschema %}
