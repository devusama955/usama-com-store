<style>
    .announcement {
         width: 100%;
         background-color: #C5DE48;
    }
</style>
<section class="announcement">
    <div class="container">
        <div class="announcement_inner">
            {% for block in section.blocks %}
            <div class="text">
                {% if block.settings.heading != blank %}
                <h2>{{ block.settings.heading }}</h2>
                {% endif %}
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% schema %}
{
  "name": "Announcement Section",
  "settings": [],
  "blocks": [
    {
      "type": "section",
      "name": "Section Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Bundle and Save"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Section"
    }
  ]
}
{% endschema %}
