<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.8/slick.min.css" />
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.8/slick-theme.min.css" />
<style>
    .banner {
        width: 100%;
        height: auto;
        background-image: url('{{ section.settings.bg_image | img_url: 'master' }}');
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        text-align: center;
    }

    .banner .container {
        max-width: 1200px;
        padding: 0 40px;
        margin: auto;
    }

    .banner .banner_inner {
        display: flex;
    }

    .banner .banner_col {
        width: 100%;
        padding-top: 253px;
        margin-bottom: 28px;
    }

    .banner .banner_col h3 {
        color: #FFF;
        text-align: center;
        font-family: "DM Sans";
        font-size: 24px;
        font-style: normal;
        font-weight: 700;
        line-height: normal;
        letter-spacing: -0.293px;
    }

    .banner .banner_col h2 {
        color: #FFF;
        text-align: center;
        font-family: "DM Sans";
        font-size: 72px;
        font-style: normal;
        font-weight: 700;
        line-height: 86px;
        letter-spacing: -1px;
        margin-bottom: 28.8px;
    }

    .banner .banner_col p {
        color: #FFF;
        text-align: center;
        font-family: "DM Sans";
        font-size: 22px;
        font-style: normal;
        font-weight: 500;
        line-height: 32px;
        max-width: 754px;
        margin: 0 auto;
        margin-bottom: 28.8px;
    }

    .banner a {
        width: 230px;
        height: 60px;
        border-radius: 100px;
        background: #482BE7;
        display: inline-flex;
        justify-content: center;
        align-items: center;
        text-decoration: none;
        color: #FFF;
        text-align: center;
        font-family: "DM Sans";
        font-size: 18px;
        font-style: normal;
        font-weight: 500;
        line-height: 26px;
        margin: 58px 0;
    }

    .banner .slick-dots li button {
        font-size: 0;
        line-height: 0;
        display: block;
        width: 30px;
        height: 33px;
        padding: 5px;
        cursor: pointer;
        color: white;
        border: 0;
        outline: 0;
        background: unset;
    }

    .banner .slick-dots li.slick-active button:before {
        opacity: .75;
        color: #fff;
    }

    .banner .slick-prev {
        left: -25px;
        top: 71%;
    }

    .banner .slick-next {
        right: -25px;
        top: 71%;
    }

    @media screen and (max-width: 768px) {
        .slick-slider .slick-track,
        .slick-slider .slick-list {
            height: 594px;
        }

        .banner .banner_col p {
            font-size: 18px;
        }

        .banner .banner_col h2 {
            font-size: 35px;
            margin-bottom: unset;
        }

        .banner .banner_col {
            padding-top: 150px;
        }

        .slick-slider .slick-track,
        .slick-slider .slick-list {
            height: 397px;
        }
    }
</style>

<section class="banner">
    <div class="container">
        <div class="banner_inner">
            {% for block in section.blocks %}
            <div class="banner_col">
                {% if block.settings.subhead != blank %}
                <h3>{{ block.settings.subhead }}</h3>
                {% endif %}
                {% if block.settings.headline != blank %}
                <h2>{{ block.settings.headline }}</h2>
                {% endif %}
                {% if block.settings.descr != blank %}
                <p>{{ block.settings.descr }}</p> <!-- Changed from <span> to <p> -->
                {% endif %}
            </div>
            {% endfor %}
        </div>
        {% if section.settings.btn_text != blank %}
        <a href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}</a>
        {% endif %}
    </div>
</section>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js" defer></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.8/slick.min.js" defer></script>

<script>
    $('.banner_inner').slick({
        dots: true,
        infinite: true,
        speed: 300,
        slidesToShow: 1,
        adaptiveHeight: true
    });
</script>

{% schema %}
{
    "name": "Section name",
    "settings": [
        {
            "type": "image_picker",
            "id": "bg_image",
            "label": "Image BG"
        },
        {
            "type": "text",
            "id": "btn_text",
            "label": "Button Text",
            "default": "Shop Now"
        },
        {
            "type": "url",
            "id": "btn_link",
            "label": "Button URL"
        }
    ],
    "blocks": [
        {
            "name": "Slide",
            "type": "slide",
            "settings": [
                {
                    "type": "text",
                    "id": "subhead",
                    "label": "Subhead"
                },
                {
                    "type": "text",
                    "id": "headline",
                    "label": "Headline"
                },
                {
                    "type": "richtext",
                    "id": "descr",
                    "label": "Text"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Slider Section"
        }
    ]
}
{% endschema %}
